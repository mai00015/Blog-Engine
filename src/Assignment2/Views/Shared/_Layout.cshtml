@using Microsoft.AspNetCore.Http;

@{string firstname = Context.Session.GetString("FirstName");
    string lastname = Context.Session.GetString("LastName");
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
    <link rel="stylesheet"
          href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <link href="~/css/style.css" rel="stylesheet" />
</head>
<body>
    <div class="jumbotron" style="background-color: #cccccc;">
        <div class="container text-center">
            <h1 style="color: #145A32;">CST8359 Assignment 2</h1>
        </div>
    </div>

    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse"
                        data-target="#myNavbar">
                    <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">My Blog</a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="/">Home</a></li>
                    @if (@Context.Session.GetInt32("RoleId") == 1)
                    {
                                 <!--Only if the user is addministrator-->
                        <li><a href="/Home/AddBlogPost">Create Blog</a></li>
                        <li><a href="/Home/ViewBadWords">View Bad Words</a></li>

                    }
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <form class="navbar-form" action="#">
                            <div class="input-group">
                                <input type="text" name="searchid" class="form-control"
                                       placeholder="Search">
                                <div class="input-group-btn">
                                    <button class="btn btn-default" type="submit">
                                        <i class="glyphicon glyphicon-search"></i>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </li>
                    @if (firstname == null || lastname == null)
                    {
                        <li><a href="/Home/Login">Login</a></li>
                        <li><a href="/Home/Register">Register</a></li>
                    }
                    else
                    {
                        <li><a asp-controller="Home" asp-action="EditProfile" asp-route-id="@Context.Session.GetInt32("UserId")">Welcome, @firstname&nbsp;@lastname</a></li>
                        <li><a href="/Home/Logout">Logout</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="content">
        @RenderBody()
    </div>
    <br /><br /><br /><br /><br /><br /><br />
    <footer id="Footer">
        <div class="container-fluid text-justify">
            <div class="row">
                <h4>About me</h4>
                <ul>
                    <li>First Name:&emsp;Kha</li>
                    <li>Last Name:&emsp;Mai</li>
                    <li>Email Address:&emsp;mai00015@algonquinlive.com</li>
                    <li>Student Number:&emsp;040-780-292</li>
                </ul>
            </div>
        </div>
    </footer>
</body>
</html>