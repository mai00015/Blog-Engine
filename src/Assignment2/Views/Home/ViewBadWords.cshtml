@model IEnumerable<Assignment2.Models.BadWord>

@{
    Layout = "_Layout";
}

<br />
<br />
<div class="container">
    <br /> <br />
    <div class="row">
        <div class="col-sm-7">
            <div class="well">
                <form asp-controller="Home" asp-action="AddBadWord" method="post">
                    <div class="form-group">
                        <label for="Title">Add bad word:</label>
                        <input type="text" class="form-control" name="bad" required="required">
                    </div>
                    <div class="form-group text-right">
                        <button type="submit" class="btn btn-primary btn-md">Add</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="page-header">
        <h3>List of bad words</h3>
    </div>
    <br /><br />
    @if (Model == null || Model.Count() == 0)
            {
        <h4>Currently, there are no bad words to display</h4>
    }
    else

    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Delete</th>
                    <th>Bad Words</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><a class="btn btn-xs btn-danger" asp-controller="Home" asp-action="DeleteWords" asp-route-id="@item.BadWordId">Delete</a></td>
                        <td>@item.Word</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
